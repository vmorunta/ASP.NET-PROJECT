@model Post
@{
    ViewData["Title"] = "Delete Post";
}

<form method="post" asp-action="DeletePost">
    <input asp-for="Id" hidden/>
    <div class="boarder p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text primary">Delete Post</h2>
        </div>
    </div>
    <div class="mb-3">
        <label asp-for="UserName">Name</label>
        <input asp-for="UserName" disabled class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="Title">Title</label>
        <input asp-for="Title" disabled class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="Text">Message</label>
        <input asp-for="Text" disabled class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary" style="width:150px">Delete</button>
    <a asp-controller="Post" asp-action="Index" class="btn btn-primary" style="width:300px">
        Back To The Forum
    </a>
</form>